# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /   	controllers.Application.index

GET		/app    controllers.AppManager.index
GET		/addApp/:app     controllers.AppManager.addApp(app: String)
GET     /removeApp/:id      controllers.AppManager.removeApp(id: Long)

GET     /subscriber     controllers.SubscriberManager.index
GET     /addSubscriber  controllers.SubscriberManager.addSubscriber(email:String, name:Option[String])
GET     /removeSubscriber/:id   controllers.SubscriberManager.removeSubscriber(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
